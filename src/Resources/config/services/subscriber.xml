<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="Kiener\MolliePayments\Subscriber\OrderDeliverySubscriber" class="Kiener\MolliePayments\Subscriber\OrderDeliverySubscriber">
            <argument type="service" id="Kiener\MolliePayments\Facade\MollieShipment"/>
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="Kiener\MolliePayments\Subscriber\CancelMollieOrderSubscriber">
            <argument type="service" id="Mollie\Api\MollieApiClient"/>
            <argument type="service" id="Kiener\MolliePayments\Service\OrderService"/>
            <argument type="service" id="Kiener\MolliePayments\Service\LoggerService"/>
            <argument>%kernel.shopware_version%</argument>
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="Kiener\MolliePayments\Subscriber\PaymentStateSubscriber" class="Kiener\MolliePayments\Subscriber\PaymentStateSubscriber">
            <argument type="service" id="Kiener\MolliePayments\Facade\SetMollieOrderRefunded"/>
            <argument type="service" id="Kiener\MolliePayments\Service\LoggerService"/>
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="Kiener\MolliePayments\Subscriber\SystemConfigSubscriber">
            <argument type="service" id="Kiener\MolliePayments\Service\SettingsService"/>
            <argument type="service" id="Kiener\MolliePayments\Service\LoggerService"/>
            <tag name="kernel.event_subscriber"/>
        </service>

        <!-- Subscriptions -->
        <service id="Kiener\MolliePayments\Subscriber\Subscription\CheckoutConfirmPageSubscriber"
                 class="Kiener\MolliePayments\Subscriber\Subscription\CheckoutConfirmPageSubscriber">
            <argument type="service" id="Shopware\Core\Checkout\Payment\SalesChannel\PaymentMethodRoute"/>

            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="Kiener\MolliePayments\Subscriber\Subscription\CreateSubscriptionsSubscriber">
            <argument type="service" id="state_machine_state.repository"/>
            <argument type="service" id="order.repository"/>
            <argument type="service" id="order_transaction.repository"/>
            <argument type="service" id="mollie_subscription_to_product.repository"/>
            <argument type="service" id="Kiener\MolliePayments\Service\Subscription\SubscriptionOptions"/>
            <argument type="service" id="Kiener\MolliePayments\Factory\MollieApiFactory"/>
            <argument type="service" id="Mollie\Api\MollieApiClient"/>
            <argument type="service" id="Kiener\MolliePayments\Service\CustomerService"/>
            <argument type="service" id="Kiener\MolliePayments\Service\LoggerService"/>

            <tag name="kernel.event_subscriber"/>
        </service>
    </services>
</container>
